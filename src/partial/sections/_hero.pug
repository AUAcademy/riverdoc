section.hero
  div.column
    div(style={'flex-basis':'58px'})
    header.heroHeader.row
      div(style={'flex-basis':'105px'})
      div.heroHeader-left
        img(src='./assets/images/icons/common/logo.svg').heroLogo
      div(style={'flex-basis': '872px'})
      div.heroHeader-right
        a(href='#').button.button-heroHeader
          span задать вопрос
      div(style={ 'flex-basis': '105px' })
    div(style={'flex-basis':'107px'})
    div.heroContent.row
      div(style={'flex-basis':'105px'})
