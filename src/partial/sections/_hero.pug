            input.heroForm-input
          div(style={'flex-basis':'20px'})
          div.heroForm-container
            label.heroForm-label Организация
            input.heroForm-input
          div(style={ 'flex-basis': '20px' })
          div.heroForm-container
            label.heroForm-label Телефон
            input.heroForm-input
          div(style={ 'flex-basis': '20px' })
          div.heroForm-container
            label.heroForm-label E-mail
            input.heroForm-input
          div(style={ 'flex-basis': '20px' })
          a(href='#').button.button-heroForm
            span отправить
